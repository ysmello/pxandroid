<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".AdminActivity">

    <TextView
        android:id="@+id/textAdminWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BEM-VINDO, ADMINISTRADOR!"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/textAdminInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Informações do Usuário/Email"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="24dp" />

    <Button
        android:id="@+id/btnGerenciarCadastros"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Realizar Cadastros e Gerenciar Dados"
        android:backgroundTint="#00E0C6"
        android:textColor="#000000"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sair (Logout)"
        android:backgroundTint="#FF4444"
        android:textColor="#FFFFFF"
        android:layout_gravity="center_horizontal"/> </LinearLayout>